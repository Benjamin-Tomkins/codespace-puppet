version: '2'

networks:
  puppet:
    driver: bridge

services:
  puppet:
    image: puppet-master
    ports:
      - "8000:8000"
      - "2222:22"
      - "80:80"
    environment:
      JAVA_ARGS: "-Xms256m -Xmx256m -XX:MaxPermSize=256m"
    volumes:
      - /control:/workspace
    networks:
      - puppet
    container_name: puppet
    domainname: schoolofdevops.com
    hostname: puppet

  node1:
    image: puppet-node-centos-6
    ports:
       - "2223:22"
       - "81:80"
    networks:
      - puppet
    container_name: node1
    domainname: schoolofdevops.com
    hostname: node1

  node2:
    image: puppet-node-centos-6
    ports:
       - "2224:22"
       - "82:80"
    networks:
      - puppet
    container_name: node2
    domainname: schoolofdevops.com
    hostname: node2

  node3:
    image: puppet-node-centos-6
    ports:
      - "2225:22"
      - "83:80"
    networks:
      - puppet
    container_name: node3
    domainname: schoolofdevops.com
    hostname: node3

  node4:
    image: puppet-node-centos-6
    ports:
      - "2226:22"
      - "84:80"
      - "3306:3306"
    networks:
      - puppet
    container_name: node4
    domainname: schoolofdevops.com
    hostname: node4

